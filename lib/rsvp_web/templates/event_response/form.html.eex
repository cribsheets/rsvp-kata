<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

  <%= label f, :going %>
  <%= checkbox f, :going %>
  <%= error_tag f, :going %>

  <%= hidden_input f, :event_id, value: @event.id %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
